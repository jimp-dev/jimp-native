{
  "name": "@jimp-native/plugin-dither-napi",
  "version": "0.0.8",
  "description": "C++ implementation of plugin-dither using the Node Addon API",
  "main": "dist/index.js",
  "types": "src/index.ts",
  "module": "es/index.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "postinstall": "node-gyp rebuild -j max",
    "clean": "rimraf ./dist ./es ./build",
    "build": "npm run clean && npm run build:node && npm run build:module && npm run build:cpp",
    "build:cpp": "node-gyp rebuild -j max",
    "build:cpp:debug": "node-gyp -j max rebuild --debug",
    "build:watch": "npm run build:node:debug -- -- --watch --verbose",
    "build:debug": "npm run build:node:debug",
    "build:module": "cross-env BABEL_ENV=module babel src -d es --extensions \".ts\" --source-maps --config-file ../../babel.config.js",
    "build:node": "babel src -d dist --source-maps --extensions \".ts\" --config-file ../../babel.config.js"
  },
  "dependencies": {
    "@jimp-native/plugin-dither-cpp": "^0.0.8",
    "@jimp-native/utils-cpp": "^0.0.8",
    "@jimp-native/utils-napi": "^0.0.8",
    "@jimp-native/utils-ts": "^0.0.8",
    "@jimp/utils": "^0.22.4",
    "jimp": "^0.22.4"
  },
  "author": "Sjoerd Dal",
  "license": "MIT"
}